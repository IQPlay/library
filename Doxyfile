# Chemin des fichiers d'entrée
INPUT                  = lib/src/main

# Extensions de fichiers à inclure
FILE_PATTERNS          = *.java

# Activer la recherche dans les sous-dossiers
RECURSIVE              = YES

# Activer les commentaires javadoc
JAVADOC_AUTOBRIEF      = YES

# Sortie de documentation HTML
GENERATE_HTML          = YES
HTML_OUTPUT            = docs/html

# Sortie de documentation LaTeX (facultatif)
GENERATE_LATEX         = NO

# Sortie de documentation pour Doxygen XML (utile pour l'intégration AsciiDoctor)
GENERATE_XML           = YES
XML_OUTPUT             = docs/xml

# Exclure des dossiers ou fichiers spécifiques si nécessaire
EXCLUDE_PATTERNS       = */test/*

# Configuration supplémentaire pour l'esthétique et les détails
FULL_PATH_NAMES        = NO
OPTIMIZE_OUTPUT_FOR_C  = NO
INLINE_INHERITED_MEMB  = YES
SHOW_INCLUDE_FILES     = NO
SORT_MEMBER_DOCS       = YES
SORT_BRIEF_DOCS        = YES
SORT_BY_SCOPE_NAME     = YES

# Activer la génération de diagrammes UML si Graphviz est installé
HAVE_DOT               = YES
